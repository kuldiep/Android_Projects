<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.code_freak.com.get_images.Get_Image">

    <ImageView

        android:layout_width="3000dp"
        android:layout_height="300dp"
        android:id="@+id/ivGetImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:onClick="PickFromGalary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pick from galary"
        android:id="@+id/btnGalary"
        android:layout_below="@+id/ivGetImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:onClick="getImageFromCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera"
        android:id="@+id/btnCamera"
        android:layout_alignBottom="@+id/btnGalary"
        android:layout_alignRight="@+id/ivGetImage"
        android:layout_alignEnd="@+id/ivGetImage" />

    <Button
        android:onClick="Animate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="animate1"
        android:id="@+id/btnAni1"
        android:layout_below="@+id/btnGalary"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:onClick="Animate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="animate2"
        android:id="@+id/btnAni2"
        android:layout_below="@+id/btnGalary"
        android:layout_alignLeft="@+id/btnBlue"
        android:layout_alignStart="@+id/btnBlue" />

    <Button
        android:onClick="Animate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="animate3"
        android:id="@+id/btnAni3"
        android:layout_below="@+id/btnCamera"
        android:layout_alignRight="@+id/btnCamera"
        android:layout_alignEnd="@+id/btnCamera" />

    <Button
        android:onClick="processImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="grey"
        android:id="@+id/btnGrey"
        android:layout_alignParentBottom="true" />

    <Button
        android:onClick="processImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="blue"
        android:id="@+id/btnBlue"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="magenta"
        android:id="@+id/btnmagenta"
        android:layout_alignBottom="@+id/btnBlue"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
